<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  MainPageActivity  -->
    <style name="titletext">
        <item name="android:textSize">42sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="foodtext_18">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <!--  DetailPageActivity  -->

    <!--  SignInActivity  -->
    <style name="text_sign_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_sign_hint">
        <item name="android:textSize">14sp</item>
        <item name="android:ems">19</item>
        <item name="android:textColor">@color/gray</item>

    </style>

    <style name="btn_default" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="cb_default">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  SignUpActivity  -->

    <!--  MyPageActivity  -->

    <style name="text_user_info">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_tag_bg">
        <item name="android:background">@drawable/bg_tag_white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tag_text">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>