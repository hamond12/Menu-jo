<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <TextView
        android:id="@+id/catagory"
        style="@style/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/main_catagory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/ib_koreanfood"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_backgroud"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_koreanfood"
        app:layout_constraintEnd_toStartOf="@+id/ib_chinesefood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catagory" />

    <TextView
        android:id="@+id/textView"
        style="@style/food_text_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_koreanfood"
        app:layout_constraintEnd_toEndOf="@+id/ib_koreanfood"
        app:layout_constraintStart_toStartOf="@+id/ib_koreanfood"
        app:layout_constraintTop_toBottomOf="@+id/ib_koreanfood" />

    <ImageButton
        android:id="@+id/ib_chinesefood"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/round_backgroud"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_chinesefood"
        app:layout_constraintEnd_toStartOf="@+id/ib_westernfood"
        app:layout_constraintBottom_toBottomOf="@+id/ib_koreanfood"
        app:layout_constraintStart_toEndOf="@+id/ib_koreanfood"
        app:layout_constraintTop_toTopOf="@+id/ib_koreanfood" />

    <TextView
        android:id="@+id/textView2"
        style="@style/food_text_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_chinesefood"
        app:layout_constraintEnd_toEndOf="@+id/ib_chinesefood"
        app:layout_constraintStart_toStartOf="@+id/ib_chinesefood"
        app:layout_constraintTop_toBottomOf="@+id/ib_chinesefood" />

    <ImageButton
        android:id="@+id/ib_westernfood"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/round_backgroud"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_westernfood"
        app:layout_constraintEnd_toStartOf="@+id/ib_japanesefood"
        app:layout_constraintStart_toEndOf="@+id/ib_chinesefood"
        app:layout_constraintTop_toTopOf="@+id/ib_chinesefood" />

    <TextView
        android:id="@+id/textView3"
        style="@style/food_text_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_westernfood"
        app:layout_constraintEnd_toEndOf="@+id/ib_westernfood"
        app:layout_constraintStart_toStartOf="@+id/ib_westernfood"
        app:layout_constraintTop_toBottomOf="@+id/ib_westernfood" />

    <ImageButton
        android:id="@+id/ib_japanesefood"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/round_backgroud"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_japanesefood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ib_westernfood"
        app:layout_constraintTop_toTopOf="@+id/ib_westernfood" />

    <TextView
        style="@style/food_text_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_japanesefood"
        app:layout_constraintEnd_toEndOf="@+id/ib_japanesefood"
        app:layout_constraintStart_toStartOf="@+id/ib_japanesefood"
        app:layout_constraintTop_toBottomOf="@+id/ib_japanesefood" />


    <!-- 네비게이트 -->

    <Button
        android:id="@+id/btn_snackbar"
        style="@style/btn_click_text_30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/main_click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ib_japanesefood"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ib_koreanfood" />

</androidx.constraintlayout.widget.ConstraintLayout>