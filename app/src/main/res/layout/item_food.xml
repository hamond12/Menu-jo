<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_list"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_square_backgroud"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_jjambbong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/background_linearlayout"
        android:clipToOutline="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/iv_list"
        app:layout_constraintStart_toEndOf="@+id/iv_list"
        app:layout_constraintTop_toTopOf="@+id/iv_list">

        <TextView
            android:id="@+id/tv_menu_list_name"
            style="@style/menuname_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/detail_menu_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_menu_list_intoduce"
            style="@style/menuintroduce_18"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/detail_menu_introduce"
            app:layout_constraintEnd_toEndOf="@+id/tv_menu_list_name"
            app:layout_constraintStart_toStartOf="@+id/tv_menu_list_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_list_name" />

        <TextView
            android:id="@+id/tv_list_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>