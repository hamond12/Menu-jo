<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <ImageView
        android:id="@+id/iv_signup_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_logo_nontext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_signup_name"
        style="@style/text_sign_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="40dp"
        android:text="@string/tv_signup_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_signup_image" />

    <EditText
        android:id="@+id/et_signup_name"
        style="@style/text_sign_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="@string/et_signup_name"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/tv_signup_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_name" />

    <TextView
        android:id="@+id/tv_signup_id"
        style="@style/text_sign_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/tv_signup_id"
        app:layout_constraintStart_toStartOf="@+id/et_signup_name"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_name" />

    <EditText
        android:id="@+id/et_signup_id"
        style="@style/text_sign_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="@string/et_signup_id"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/tv_signup_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_id" />

    <TextView
        android:id="@+id/tv_signup_pwd"
        style="@style/text_sign_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/tv_signup_pwd"
        app:layout_constraintStart_toStartOf="@+id/et_signup_id"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_id" />

    <EditText
        android:id="@+id/et_signup_pwd"
        style="@style/text_sign_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="@string/et_signup_pwd"
        android:inputType="numberPassword"
        app:layout_constraintStart_toStartOf="@+id/tv_signup_pwd"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_pwd" />

    <TextView
        android:id="@+id/tv_signup_rb_title"
        style="@style/text_sign_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/tv_signup_rb"
        app:layout_constraintStart_toStartOf="@+id/et_signup_pwd"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_pwd" />


    <RadioButton
        android:id="@+id/rb_meat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_meat"
        app:layout_constraintStart_toStartOf="@+id/tv_signup_rb_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_rb_title" />

    <RadioButton
        android:id="@+id/rb_seafood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_seafood"
        app:layout_constraintStart_toEndOf="@+id/rb_meat"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_rb_title" />

    <RadioButton
        android:id="@+id/rb_rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_rice"
        app:layout_constraintStart_toEndOf="@+id/rb_seafood"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_rb_title" />

    <RadioButton
        android:id="@+id/rb_noodle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_noodle"
        app:layout_constraintStart_toEndOf="@+id/rb_rice"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_rb_title" />

    <RadioButton
        android:id="@+id/rb_bread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_bread"
        app:layout_constraintStart_toEndOf="@+id/rb_noodle"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_rb_title" />

    <RadioButton
        android:id="@+id/rb_spicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_spicy"
        app:layout_constraintStart_toStartOf="@+id/rb_meat"
        app:layout_constraintTop_toBottomOf="@+id/rb_meat" />

    <RadioButton
        android:id="@+id/rb_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_normal"
        app:layout_constraintStart_toEndOf="@+id/rb_spicy"
        app:layout_constraintTop_toBottomOf="@+id/rb_seafood" />

    <RadioButton
        android:id="@+id/rb_mild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_mild"
        app:layout_constraintStart_toEndOf="@+id/rb_normal"
        app:layout_constraintTop_toBottomOf="@+id/rb_rice" />

    <RadioButton
        android:id="@+id/rb_vegetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_vegetable"
        app:layout_constraintStart_toEndOf="@+id/rb_mild"
        app:layout_constraintTop_toBottomOf="@+id/rb_noodle" />

    <RadioButton
        android:id="@+id/rb_fruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rb_fruit"
        app:layout_constraintStart_toEndOf="@+id/rb_vegetable"
        app:layout_constraintTop_toBottomOf="@+id/rb_bread" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signup_signup"
        android:text="@string/btn_signup_signup"
        android:layout_marginBottom="50dp"
        style="@style/btn_default"
        app:layout_constraintBottom_toTopOf="@+id/iv_signin_logo_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

<!--    <androidx.appcompat.widget.AppCompatButton-->
<!--        android:id="@+id/btn_signup_signup"-->
<!--        style="@style/btn_default"-->
<!--        android:text="@string/btn_signup_signup"-->
<!--        app:layout_constraintEnd_toEndOf="@id/rb_fruit"-->
<!--        app:layout_constraintTop_toBottomOf="@id/rb_fruit" />-->

    <ImageView
        android:id="@+id/iv_signin_logo_horizontal"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_logo_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>