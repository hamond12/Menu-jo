<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <TextView
        android:id="@+id/catagory"
        style="@style/titletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/main_catagory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <ImageView
        android:id="@+id/iv_koreanfood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_koreanfood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_chinesefood"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catagory" />

    <TextView
        android:id="@+id/textView"
        style="@style/foodtext_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_koreanfood"
        app:layout_constraintEnd_toEndOf="@+id/iv_koreanfood"
        app:layout_constraintStart_toStartOf="@+id/iv_koreanfood"
        app:layout_constraintTop_toBottomOf="@+id/iv_koreanfood" />

    <ImageView
        android:id="@+id/iv_chinesefood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_chinesefood"
        app:layout_constraintBottom_toBottomOf="@+id/iv_koreanfood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_koreanfood"
        app:layout_constraintTop_toTopOf="@+id/iv_koreanfood" />

    <TextView
        android:id="@+id/textView2"
        style="@style/foodtext_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_chinesefood"
        app:layout_constraintEnd_toEndOf="@+id/iv_chinesefood"
        app:layout_constraintStart_toStartOf="@+id/iv_chinesefood"
        app:layout_constraintTop_toBottomOf="@+id/iv_chinesefood" />

    <ImageView
        android:id="@+id/iv_westernfood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_westernfood"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        style="@style/foodtext_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_westernfood"
        app:layout_constraintEnd_toEndOf="@+id/iv_westernfood"
        app:layout_constraintStart_toStartOf="@+id/iv_westernfood"
        app:layout_constraintTop_toBottomOf="@+id/iv_westernfood" />

    <ImageView
        android:id="@+id/iv_japanesefood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_japanesefood"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        style="@style/foodtext_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_japanesefood"
        app:layout_constraintEnd_toEndOf="@+id/iv_japanesefood"
        app:layout_constraintStart_toStartOf="@+id/iv_japanesefood"
        app:layout_constraintTop_toBottomOf="@+id/iv_japanesefood" />


    <!-- 네비게이트 -->

    <TextView
        android:id="@+id/tv_navigation_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="디테일"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_navigation_my_page"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_navigation_my_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="마이"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_navigation_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_navigation_detail"
        app:layout_constraintTop_toTopOf="@+id/tv_navigation_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>